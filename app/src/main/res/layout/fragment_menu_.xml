<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Fragment"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/barraMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menuNavBar"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LSM"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:padding="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnNavegar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Traductor"
            app:backgroundTint="@null"
            android:background="@drawable/botones_menu"
            android:textSize="20dp"
            android:shadowColor="#116C00"
            android:shadowRadius="10"
            android:drawableRight="@drawable/baseline_sign_language_24"></Button>

        <Button
            android:id="@+id/btnMenuToCategorias"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Categorias"
            app:backgroundTint="@null"
            android:background="@drawable/botones_menu"
            android:textSize="20dp"
            android:shadowColor="#116C00"
            android:shadowRadius="10"
            android:drawableRight="@drawable/baseline_discount_24"></Button>

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="InformaciÃ³n"
            app:backgroundTint="@null"
            android:background="@drawable/botones_menu"
            android:textSize="20dp"
            android:shadowColor="#116C00"
            android:shadowRadius="10"
            android:drawableRight="@drawable/baseline_info_24"></Button>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="Salir"
            app:backgroundTint="@null"
            android:background="@drawable/btn_salir_style"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:shadowColor="#9C0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:drawableLeft="@drawable/baseline_power_settings_new_24"
            ></Button>
    </LinearLayout>


</FrameLayout>